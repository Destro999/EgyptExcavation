@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="wrapper">
            <a id="manage" class="text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </div>
        <div class="sign-in button">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </div>
    }
    else
    {
        <div style="padding-right:5%; padding-top:2%">
            <a class="sign-in button" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
        <br />
        <br />
        <div style="padding-right:5%; padding-top:2%">
            <a class="sign-in button" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    }
</div>

