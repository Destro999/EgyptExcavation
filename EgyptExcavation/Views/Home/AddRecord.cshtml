@{
    ViewData["Title"] = "Add Record";
}

<link rel="icon" href="~/img/icon.jpg" type="image/icon type">


<div class="row">
    <div class="col-4 text-center">
        <h1>Add a Burial Record</h1>
        <a class="btn btn-success" asp-controller="Burials" asp-action="Create">New Burial</a>
    </div>
    <div class="col-4 text-center">
        <h1>Add a Biological Sample</h1>
        <a class="btn btn-success" asp-controller="BiologicalSamples" asp-action="Create">New Sample</a>
    </div>
    <div class="col-4 text-center">
        <h1>Upload Field Notes or Photos </h1>
        <a class="btn btn-success" asp-controller="Home" asp-action="UploadFile">New Upload</a>
    </div>
</div>