@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <p>Thanks for creating your new account. A system administrator will review your account and assign permission to create and edit records.</p>
    <a class="btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
</div>
